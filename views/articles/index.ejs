<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>MD-Blog</title>
</head>
<body>
    <div class="container col-md-6">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/article/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title.charAt(0).toUpperCase() + article.title.slice(1) %></h4>
                    <p class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></p>
                    <p class="card-text mb-2"><%= article.description %></p>
                    <a href="/article/<%= article.id %>" class="btn btn-primary">Read More</a>
                    <a href="/article/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <form action="/article/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>

    
</body>
</html>